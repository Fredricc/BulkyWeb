@model Product

<form method ="post">
    <div class="card shadow border-0 mt-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">Title</h3>
                <p class="text-white-50 fw-semibold mb-0">by Author</p>
            </div>
        </div>
        <div class="card-body">
        </div><div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to home</small>
                    </a>  
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src="http://placeholder.co/500x600" width="100%" class="rounded" />
                </div>
                <div class="col-12 col-lg-6 offset-lg-1">
                    <div class="col-12 col-md-6 pb-4">
                        <span class="badge">Category</span>
                    </div>
                </div>
                <div class="row ps-2">
                    <h6 class="text-dark text-opacity-50 pb-2">ISBN : ISBN</h6>
                </div>
                <div class="row ps-2">
                    <h6 class="text-dark text-opacity-50 pb-2">
                        List Price : 
                        <span class="text-decoration-line-through">
                            ListPrice
                            </span>
                        </h6>
                </div>
                <div class="row text-center ps-2">
                    <div class="p-1 col-3 col-lg-2 lg-white border-bottom">
                        <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                    </div>
                    <h6 class="text-dark text-opacity-50 pb-2">ISBN : ISBN</h6>
                </div>
            </div>
        </div>

    </div>
</form>
