@model List<Category>

    <div class="card mt-4 border-0 shadow">
    <div class="card-header bg-secondary bg-light mt-8 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-success">Category List</h2
            </div>
        </div>
    </div>
    <div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

<table class="table-bordered table-striped table">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Orders
        </th>
        <th>
             Action
         </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-route-id ="@obj.Id" asp-action="Edit" class="btn btn-outline-success mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>

