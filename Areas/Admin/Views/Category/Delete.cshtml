@model Category

<div class="card mt-4 border-0 shadow">
    <div class="card-header bg-secondary bg-light mt-8 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-success">Delete Category</h2
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
    <input asp-for="Id" hidden />
    <div class="p-3 mt-4 border">
         <div class="form-floating py-2 col-12">
            <input asp-for="Name" disable class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>
        </div>
         <div class="form-floating py-2 col-12">
            <input asp-for="DisplayOrder" disable class="form-control border-0 shadow" />
            <label asp-for="DisplayOrder" class="ms-2"></label>
        </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">

                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>

        </div>
    </div>
</form>
    </div>
</div>




